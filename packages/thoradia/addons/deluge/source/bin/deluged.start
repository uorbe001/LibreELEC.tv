#!/bin/sh

. /etc/profile
oe_setup_addon service.deluge

if [ -f "$ADDON_HOME/init.sh" ]; then
  sh "$ADDON_HOME/init.sh"
fi

while true; do
  nslookup localhost &> /dev/null
  [ "$?" = "0" ] && break
  echo "Waiting 1 second for DNS"
  sleep 1
done

if [ -z "$dl_nice" ]; then
  dl_nice="0"
fi

LD_LIBRARY_PATH="$ADDON_DIR/deluge" \
nice -n "$dl_nice" \
python "$ADDON_DIR/deluge/deluged" -d -c "$ADDON_HOME"
